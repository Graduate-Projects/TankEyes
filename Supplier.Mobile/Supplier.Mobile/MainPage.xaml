<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Supplier.Mobile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout Margin="0" Padding="0" Spacing="10">
                <Label Text="{Binding Supplier.full_name,StringFormat='Welcome, {0}'}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                <Label Text="{Binding Supplier.phone_number,StringFormat='your phone number is {0}'}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </StackLayout> 
        </Frame>
 
    </StackLayout>

</ContentPage>

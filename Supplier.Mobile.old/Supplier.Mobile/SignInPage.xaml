<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Supplier.Mobile.SignInPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome Please Enter You Phone Number" VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="TextPhoneNumber"  Placeholder="+96278xxxxxxx"/>
            <Button Text="Send OTP" Background="Blue" TextColor="White" Margin="20,30" Clicked="SendOTPCode"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>